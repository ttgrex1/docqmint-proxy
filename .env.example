# Server
PORT=8000
CORS_ORIGINS=*
JWT_SECRET=change_me_to_a_long_random_value
JWT_EXPIRES_MIN=43200  # 30 days

# Seed admin (created if not exists at startup)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=changeme

# Database (SQLite file path). On Render, mount a disk at /data and set this to /data/docqmint.db
DATABASE_URL=sqlite:///./docqmint.db

# Provider
PROVIDER=openrouter
DEFAULT_MODEL=gpt-4o-mini  # update as desired, e.g., openrouter alias
TEMPERATURE=0.2
MAX_TOKENS=1024

# OpenRouter
OPENROUTER_API_KEY=your_openrouter_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_SITE_URL=https://docqmint.proxy
OPENROUTER_SITE_NAME=DocQmint Proxy
